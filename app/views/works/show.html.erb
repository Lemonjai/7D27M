<div id="post_show_content" class="skinny_wrapper wrapper_padding">
  <header>
    <p class="date"><%= @work.created_at.strftime('%A, %B %d') %></p>
    <h1><%= @work.title %></h1>
    <hr>
  </header>

  <div id="content">
    <%= @work.content %>
    <div class="button_wrapper">
      <a href="<%= @work.link %>" class="work_button" target="_blank" >Visit <%= @work.title %></a>
    </div>
  </div>

  <hr>

  <div id="share_box">
    <p>Share "<%= @work.title %>"</p>
    <a href="#"></a><i class="fa fa-twitter"></i></a>
    <a href="#"></a><i class="fa fa-facebook"></i></a>
    <a href="#"></a><i class="fa fa-google-plus"></i></a>
  </div>

  <hr>

  <%= link_to "Edit", edit_work_path(@work) %>
  <%= link_to "Delete", work_path(@work), method: :delete, data: { confirm: "Are you sure?" } %>
  
</div>